{
	"compilerOptions": {
		"target": "esnext",
		"module": "node16",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist"
	},
	"includes": ["packages/**/*.ts"],
	"exclude": ["packages/**/dist/**"]
}
