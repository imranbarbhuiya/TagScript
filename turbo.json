{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"bump": {
			"dependsOn": [],
			"outputs": ["CHANGELOG.md"],
			"cache": false
		},
		"check-update": {
			"dependsOn": [],
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["**/coverage/**"]
		},
		"test:watch": {
			"dependsOn": ["^build"],
			"outputs": ["**/coverage/**"]
		}
	}
}
