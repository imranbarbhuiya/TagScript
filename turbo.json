{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"bump": {
			"dependsOn": [],
			"outputs": ["CHANGELOG.md"]
		},
		"check-update": {
			"dependsOn": [],
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["**/coverage/**"]
		},
		"test:watch": {
			"dependsOn": ["^build"],
			"outputs": ["**/coverage/**"]
		}
	}
}
