{
	"name": "@tagscript/website",
	"private": true,
	"type": "module",
	"scripts": {
		"generate:css": "unocss 'src/**/*.tsx' 'src/**/*.mdx' 'theme.config.jsx' --out-file ./src/styles/unocss.css --config ../../unocss.config.ts",
		"dev": "concurrently 'yarn generate:css --watch' 'next dev'",
		"build": "yarn run --top-level docs && yarn generate:css && next build",
		"start": "next start",
		"lint": "TIMING=1 next lint --fix",
		"format": "prettier --cache --write ."
	},
	"dependencies": {
		"@unocss/reset": "^0.47.5",
		"next": "^13.0.6",
		"nextra": "^2.0.1",
		"nextra-theme-docs": "^2.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@unocss/cli": "^0.47.5",
		"concurrently": "^7.6.0",
		"tagscript": "workspace:^",
		"tagscript-plugin-discord": "workspace:^",
		"unocss": "^0.47.5"
	}
}
