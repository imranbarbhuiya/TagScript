{
	"name": "tagscript",
	"version": "0.8.0",
	"description": "A simple and safe template engine.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": "dist/index.global.js",
	"unpkg": "dist/index.global.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"build": "tsup && tsc -b src",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,mjs,json,md}'",
		"test": "jest",
		"test:watch": "jest --watch",
		"prepack": "rollup-type-bundler",
		"prepare": "husky install .github/husky",
		"typecheck": "tsc -p tsconfig.typecheck.json"
	},
	"keywords": [
		"tagscript",
		"string parser",
		"safe string",
		"typescript",
		"template engine",
		"template",
		"template string"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-angular": "^16.2.4",
		"@favware/rollup-type-bundler": "^1.0.7",
		"@sapphire/eslint-config": "^4.3.4",
		"@sapphire/prettier-config": "^1.4.3",
		"@types/jest": "^27.4.1",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"conventional-changelog-cli": "^2.2.2",
		"discord.js": "^13.6.0",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^28.0.3",
		"lint-staged": "^12.4.1",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.1",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typescript": "^4.6.4"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/tagscript.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/tagscript/issues"
	},
	"homepage": "https://tagscript.js.org/",
	"packageManager": "yarn@3.2.0",
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": "@sapphire/prettier-config"
}
