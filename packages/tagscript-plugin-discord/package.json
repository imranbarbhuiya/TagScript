{
	"name": "@tagscript/plugin-discord",
	"version": "3.0.0",
	"description": "A plugin for tagscript to work with discord.js.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"author": "@imranbarbhuiya",
	"license": "MIT",
	"scripts": {
		"lint": "TIMING=1 eslint src --fix --cache -c ../../.eslintrc.json",
		"build": "tsup",
		"prepack": "yarn build",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"test": "vitest run"
	},
	"keywords": [
		"tagscript",
		"string parser",
		"safe string",
		"typescript",
		"template engine",
		"template",
		"template string",
		"tagscript discord",
		"discord.js",
		"tag",
		"bot tag"
	],
	"devDependencies": {
		"@favware/cliff-jumper": "^3.0.1",
		"discord.js": "^14.14.1",
		"tagscript": "workspace:^",
		"tsup": "^8.0.2",
		"typescript": "^5.4.4"
	},
	"peerDependencies": {
		"discord.js": "^14.0.0",
		"tagscript": "*"
	},
	"engines": {
		"node": ">=v16.9.0"
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/tagscript.git",
		"directory": "packages/tagscript-plugin-discord"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/tagscript/issues"
	},
	"homepage": "https://tagscript.js.org/"
}
