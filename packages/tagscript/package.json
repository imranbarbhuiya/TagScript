{
	"name": "tagscript",
	"version": "1.4.0",
	"description": "A simple and safe template engine.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": "dist/index.global.js",
	"unpkg": "dist/index.global.js",
	"types": "dist/index.d.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"author": "@imranbarbhuiya",
	"scripts": {
		"lint": "TIMING=1 eslint src --fix --cache -c ../../eslint.config.mjs",
		"build": "tsup",
		"prepack": "yarn build",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"test": "vitest run",
		"typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
	},
	"keywords": [
		"tagscript",
		"string parser",
		"safe string",
		"typescript",
		"template engine",
		"template",
		"template string",
		"tag"
	],
	"devDependencies": {
		"@favware/cliff-jumper": "^6.0.0",
		"tsup": "^8.3.6",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=v14.0.0"
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/tagscript.git",
		"directory": "packages/tagscript"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/tagscript/issues"
	},
	"homepage": "https://tagscript.js.org/"
}
